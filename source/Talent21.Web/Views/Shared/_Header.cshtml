<div id="loader">
    <i class="fa fa-cog fa-4x fa-spin"></i>
</div>
<header>
    <div id="header-background"></div>
    <div class="container">
        <div class="pull-left">
            <div id="logo">
                <a href="/">@Product.Name</a>
            </div>
        </div>
        <ul class="hidden-xs hidden-sm nav navbar-nav navbar-right">
            <li><a href="@Url.Action("Register","Account")">Signup</a></li>
            <li><a href="@Url.Action("Login","Account")">Login</a></li>
            <li><a href="/#how">How It works</a></li>
        </ul>
        <div id="searchbox" class="pull-right">
            <form>
                <div class="form-group">
                    <label class="sr-only" for="searchfield">Searchbox</label>
                    <input type="text" class="form-control" id="searchfield" placeholder="Type keywords and press enter">
                </div>
            </form>
        </div>
        <div id="search" class="pull-right">
            <a><i class="fa fa-search fa-lg"></i></a>
        </div>
    </div>
