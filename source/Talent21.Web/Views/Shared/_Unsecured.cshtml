@{
    var Product = "Corp2Con";
}
<!DOCTYPE html>
<html>
<head>
    <base href="@Url.Content("~/")">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title @Product</title>
    <link rel="shortcut icon" href="~/content/images/favicon.png">
    @Styles.Render("~/Content/site")
</head>
<body id="home">
    <div class="fm-outer">
        <div class="fm-inner">
            <div id="loader">
                <i class="fa fa-cog fa-4x fa-spin"></i>
            </div>
            <header>
                <div id="header-background"></div>
                <div class="container">
                    <div class="pull-left">
                        <div id="logo">
                            <a href="/#">@Product</a>
                        </div>
                    </div>
                    <div id="searchbox" class="pull-right">
                        <form>
                            <div class="form-group">
                                <label class="sr-only" for="searchfield">Searchbox</label>
                                <input type="text" class="form-control" id="searchfield" placeholder="Type keywords and press enter">
                            </div>
                        </form>
                    </div>
                    <div id="search" class="pull-right">
                        <a><i class="fa fa-search fa-lg"></i></a>
                    </div>
                </div>
            </header>
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/script/site")
    @RenderSection("Scripts", false)
</body>
</html>
